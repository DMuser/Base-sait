@model IEnumerable<WebApplication11.Models.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список групп</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название группы
        </th>
        <th>
           Название Курса
        </th>
        <th>
            Имя преподавателя
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name_Group)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kurs1.Name_Kurs)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Teacher1.Name_teacher)
    </td>
    <td>
        @Html.ActionLink("Редактировать учебную группу", "Details", new { id = item.Id_Group }) |
        @Html.ActionLink("Удалить учебную группу", "Delete", new { id = item.Id_Group })
    </td>
</tr>
}

</table>
